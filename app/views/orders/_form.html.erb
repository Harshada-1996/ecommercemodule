<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ord_no %>
    <%= form.number_field :ord_no, :value => "#{rand(10..1000)}",:readonly => true%>
  </div>

  <div class="field">
    <%= form.label :ord_tracking_no %>
    <%= form.number_field :ord_tracking_no %>
  </div>

  <div class="field">
    <%= form.label :payment_total %>
    <%= form.text_field :payment_total %>
  </div>

  <div class="field">
    <%= form.label :ord_type %>
    <%= form.text_field :ord_type %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, :value=>current_user.id %>
  </div>

  <%= form.fields_for :product do |product_fields| %>
    <div class="field" >
    <%= product_fields.label :name %>
    <%= product_fields.select :product_id,options_for_select(Product.all.collect{|c| [c.prd_name]}),class: 'form-control' %>
    </div> 
  <% end %> 
  <%= form.fields_for :product do |product_fields| %>
    <div class="field" >
      Prd_sku : <%= product_fields.text_field :prd_sku %>
      Prd_name: <%= product_fields.text_field :prd_name %>
      Price: <%= product_fields.text_field :price %>
    </div>    
  <% end %>
  <%= form.fields_for :address do |address_fields| %>
    <div class="field" >
    <%= address_fields.label :Address %>
    <%= address_fields.select :address_id,options_for_select(["billing address","shipping address"]),class: 'form-control' %>
    </div> 
  <% end %> 
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
