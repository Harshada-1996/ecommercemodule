<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<div class="container container1">
    <div class="row">
    <div class="col-sm-2" style="background-color:blue;">Ord no</div>
    <div class="col-sm-2" style="background-color:blue;">Ord tracking no</div>
    <div class="col-sm-2" style="background-color:blue;">Payment total</div>
    <div class="col-sm-2" style="background-color:blue;">Ord type</div>
    <div class="col-sm-2" style="background-color:blue;">User id</div>
    </div>
    <% @orders.each do |order| %>
      <div class="row">
        <div class="col-sm-2"><%= order.ord_no %></div>
        <div class="col-sm-2"><%= order.ord_tracking_no %></div>
        <div class="col-sm-2"><%= order.payment_total %></div>
        <div class="col-sm-2"><%= order.ord_type %></div>
        <div class="col-sm-2"><%= order.user_id %></div>
        <div class="col-sm-2"><%= link_to 'Show', order %></div>
        <div class="col-sm-2"><%= link_to 'Edit', edit_order_path(order) %></div>
        <div class="col-sm-2"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
</div>

